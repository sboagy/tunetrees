{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "TUNETREES_DB": "${workspaceFolder}/tunetrees_test.sqlite3",
                "TUNETREES_DEPLOY_BASE_DIR": "${workspaceFolder}",
                "LOG_FUTURE_REVIEWS": "true",
            },
            "args": [
                "tunetrees.api.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python Debugger: FastAPI (test)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "TUNETREES_DB": "${workspaceFolder}/tunetrees_test.sqlite3",
                "TUNETREES_DEPLOY_BASE_DIR": "${workspaceFolder}",
                "LOG_FUTURE_REVIEWS": "true",
                // "NODE_ENV": "production"
            },
            "args": [
                "tunetrees.api.main:app",
                "--reload"
            ],
            "jinja": true,
            "preLaunchTask": "clean_and_stop",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Fixup Practice Records (FSRS + reps)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/fixup_practice_record_groups.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--html-output",
                "fsrs_fixup_report_apply.html",
                // "--limit",
                // "5",
                "--apply"
                // "--nofixup"
                // "--fsrsonly"
            ],
            "env": {
                "TUNETREES_DB": "${workspaceFolder}/tunetrees_production_manual.sqlite3",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        }
    ]
}