    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current TS File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "${file}"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Top 500 Ingest",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "${workspaceFolder}/ingest/top500/top500.ts"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "TuneTrees: Clean Chrome",
            "url": "http://localhost:5173/?tab=practice",
            "webRoot": "${workspaceFolder}/src",
            "userDataDir": "${workspaceFolder}/.vscode/chrome-session",
            "preLaunchTask": "wipe-chrome-profile",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--no-first-run",
                "--no-default-browser-check",
                "--disable-fre",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-session"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Debug TuneTrees PWA App",
            "url": "http://localhost:5173/", // Adjust if your Vite app runs on a different port
            "webRoot": "${workspaceFolder}", // Adjust if your source code is in a different directory
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Open Playwright Chromium - Practice",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "open",
                "--browser=chromium",
                "http://localhost:5173/?tab=practice"
            ],
            "console": "integratedTerminal",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "windows": {
                "runtimeExecutable": "npx.cmd"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run npm dev",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "BROWSER": "none"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Worker (Wrangler dev)",
            "cwd": "${workspaceFolder}/worker",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "wrangler",
                "dev",
                "--inspect",        // enable Node inspector
                "--local"           // if youâ€™re using the local Node runtime
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "autoAttachChildProcesses": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${workspaceFolder}/worker/src/*",
                "*/worker/src/*": "${workspaceFolder}/worker/src/*",
                "*/shared/*": "${workspaceFolder}/shared/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run npm migrate:production",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "migrate:production"
            ],
            "console": "integratedTerminal",
            "env": {
                "BROWSER": "none"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "name": "Attach Chromium Page 9222",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "urlFilter": "http://localhost:5173/*",
            "targetSelection": "pick",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*",
                "webpack:///./src/*": "${webRoot}/src/*",
                "*/src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Debug Playwright Specs (Node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
            "args": ["test", "--project=chromium", "--headed", "--workers=1"],
            "cwd": "${workspaceFolder}",
            "env": { "PWDEBUG": "console" },
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true
        }
        // {
