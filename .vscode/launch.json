        // {
        //     "name": "Attach Playwright Chromium 9222",
        //     "type": "chrome",
        //     "request": "attach",
        //     "port": 9222,
        //     "url": "http://localhost:5173/", // Adjust if your Vite app runs on a different port
        //     "webRoot": "/Users/sboag/gittt/tunetrees", // Adjust if your source code is in a different directory
        //     "sourceMaps": true
        // }

    ],
    "compounds": [
        {
            "name": "Run Dev + Chrome Debug",
            "configurations": [
                "Run npm dev",
                "Chrome Debug TuneTrees PWA App"
            ],
            "stopAll": true
        },
        {
            "name": "Run Dev + Playwright Chromium Debug",
            "configurations": [
                "Run npm dev",
                "Open Playwright Chromium - Practice"
            ],
            "stopAll": true
        }
    ]
}