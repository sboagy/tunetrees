{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "composite": false,
    "target": "es2022",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // "sourceMap": true,
    "outDir": ".next",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": true,
    // "inlineSourceMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "auth": [
        "./auth/"
      ],
      "components": [
        "./components/"
      ],
      "public/*": [
        "./public/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "*": [
        "src/*",
        "public/*"
      ]
      // "next-auth-http-adapter": [
      //   "./../../../gitmisc/next-auth-http-adapter/src"
      // ]
    },
    "baseUrl": "./"
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "tests/**/*.ts",
    "tests-examples/**/*.ts",
    "test-scripts/**/*.ts",
    "test-scripts/**/*.mts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "auth/**/*.ts",
    "lib/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/**/*.tsx",
    "auth/auth-types.ts",
    "react-quill.d.ts",
    "global.d.ts",
    "eslint.config.mjs",
    "playwright.config.ts",
    "postcss.config.mjs",
    "tailwind.config.mjs",
    "postcss.config.mjs",
    "tailwind.config.mjs",
    "src",
    "public",
    "public/**/*.png"
  ],
  "exclude": [
    "node_modules",
    "archive/**/*.ts",
    ".prettierrc.js",
    "dist"
  ]
}