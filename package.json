{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "tunetrees",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/patch-supabase-sourcemaps.js",
    "dev": "vite",
    "dev:worker": "cd worker && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "build": "tsc -b && vite build",
    "build:preview-local": "tsc -b && tsx scripts/build-preview-local.ts",
    "preview": "vite preview",
    "preview:local": "vite preview --strictPort --port 4173",
    "migrate:production": "tsx scripts/migrate-production-to-supabase.ts",
    "codegen:schema": "tsx oosync/src/codegen-schema.ts",
    "codegen:schema:check": "tsx oosync/src/codegen-schema.ts --check",
    "schema:sqlite:gen": "npm run codegen:schema",
    "schema:sqlite:check": "npm run codegen:schema:check",
    "create:views": "tsx scripts/create-views-direct.ts",
    "create:test-users": "tsx scripts/setup-test-environment.ts",
    "db:install-schema": "psql -h 127.0.0.1 -p 54322 -U postgres -d postgres -f sql_scripts/create-uuid-schema.sql",
    "lint": "biome lint src e2e tests oosync worker",
    "format": "biome format --write src e2e tests oosync worker",
    "format:check": "biome format src e2e tests oosync worker",
    "format:prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"e2e/**/*.{ts,tsx,js,jsx}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "format:prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\" \"e2e/**/*.{ts,tsx,js,jsx}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "check": "biome check src e2e tests oosync worker",
    "fix": "biome check --write src e2e tests oosync worker",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:local:remigrate": "playwright clear-cache && supabase db reset && npx tsx scripts/generate-auth-states.ts",
    "db:local:reset": "playwright clear-cache && RESET_DB=true playwright test --reporter=list e2e/setup/auth.setup.ts --project=setup && npx tsx scripts/generate-auth-states.ts",
    "db:ci:reset:noseed": "supabase db reset --no-seed",
    "db:ci:reset": "supabase db reset",
    "db:local:gen-test-auth": "npx tsx scripts/generate-auth-states.ts",
    "db:dump-migration": "npx supabase db dump --local --schema public -f supabase/migrations/20241101000000_initial_schema.sql",
    "db:dump-seed": "npx supabase db dump --local --data-only --schema public,auth -f supabase/seed.sql",
    "db:remote:backup": "tsx scripts/backup-supabase-linked.ts",
    "db:remote:migrate-legacy": "supabase db reset --linked --no-seed && npx tsx scripts/migrate-production-to-supabase.ts --remote",
    "db:local:migrate-legacy": "supabase db reset --no-seed && npx tsx scripts/migrate-production-to-supabase.ts && npx tsx scripts/setup-test-environment.ts",
    "db:remote:apply-top500": "supabase db execute --linked --file supabase/seeds/rsTop500.sql",
    "test": "vitest run",
    "test:unit": "vitest run tests/",
    "test:e2e": "playwright test  --reporter=list",
    "test:e2e:chromium": "playwright test --project=chromium --reporter=list",
    "test:e2e:chromium:mobile": "playwright test --project='Mobile Chrome' --reporter=list",
    "test:e2e:chromium:both": "playwright test --project=chromium-auth --project=chromium --project='Mobile Chrome' --reporter=list",
    "test:e2e:chromium:both:html": "mkdir -p ./logs && playwright test --project=chromium-auth --project=chromium --project='Mobile Chrome' --reporter=list,html",
    "test:e2e:chromium:html": "playwright test --project=chromium-auth --project=chromium --reporter=list,html",
    "test:e2e:retest-failed": "playwright test --test-list ./failures.list",
    "test:e2e:retest-failed:1": "playwright test --workers 1 --test-list ./failures.list",
    "test:e2e:retest-failed:repeat-10": "playwright test  --workers 8 --repeat-each 10 --test-list ./failures.list",
    "test:e2e:retest-failed:repeat-10:headed": "playwright test  --workers 1 --repeat-each 10   --headed --test-list ./failures.list",
    "test:e2e:chromium:headed": "playwright test --project=chromium --reporter=list --headed",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright test --reporter=html",
    "playwright:install": "playwright install",
    "audit:prod": "npm audit --production",
    "audit:summary": "npm audit || echo '⚠️  Known dev-only vulnerabilities (esbuild, lodash.template) - see SECURITY.md'",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:view": "npm run build && lighthouse http://localhost:4173 --view",
    "perf:test": "node scripts/performance-test.js",
    "perf:test:mobile": "node scripts/performance-test.js --mobile --view",
    "perf:test:both": "node scripts/performance-test.js --both --view",
    "ingest:top500": "tsx ingest/top500/top500.ts",
    "view:top500": "cd ingest/top500 && python3 -m http.server 8888",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:preview": "npm run build && wrangler pages deploy dist --branch=preview"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.7",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.36.0",
    "@kobalte/core": "^0.13.11",
    "@solidjs/router": "^0.15.4",
    "@supabase/supabase-js": "^2.86.2",
    "@tanstack/solid-table": "^8.21.3",
    "@tanstack/solid-virtual": "^3.13.12",
    "abcjs": "^6.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.0",
    "jose": "^6.1.2",
    "jodit": "^4.7.9",
    "jodit-react": "^5.2.38",
    "loglevel": "^1.9.2",
    "lucide-solid": "^0.556.0",
    "papaparse": "^5.5.3",
    "quickjs-emscripten": "^0.31.0",
    "solid-js": "^1.9.10",
    "solid-sonner": "^0.2.8",
    "sonner": "^2.0.7",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-fsrs": "^5.2.3",
    "vitest": "^4.0.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@cloudflare/workers-types": "^4.20251205.0",
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.2",
    "@types/sql.js": "^1.4.9",
    "@vitest/coverage-v8": "^4.0.13",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.6",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.2.0",
    "postgres": "^3.4.7",
    "prettier": "^3.6.2",
    "shadcn-solid": "^0.7.7",
    "supabase": "^2.67.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-solid": "^2.11.10",
    "vite-plugin-static-copy": "^3.1.4",
    "workbox-window": "^7.4.0",
    "wrangler": "^4.53.0"
  }
}
