{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "tunetrees",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "migrate:supabase": "tsx scripts/migrate-to-supabase.ts",
    "migrate:production": "tsx scripts/migrate-production-to-supabase.ts",
    "create:views": "tsx scripts/create-views-direct.ts",
    "lint": "biome lint src e2e tests",
    "format": "biome format",
    "check": "biome check",
    "fix": "biome check --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:local:reset": "playwright clear-cache && RESET_DB=true playwright test --reporter=list e2e/setup/auth.setup.ts --project=setup && npx tsx scripts/generate-auth-states.ts",
    "db:ci:reset": "supabase db reset && npx tsx scripts/setup-test-environment.ts && npx tsx scripts/generate-auth-states.ts",
    "db:local:gen-test-auth": "npx tsx scripts/generate-auth-states.ts",
    "test": "vitest",
    "test:unit": "vitest run tests/",
    "test:e2e": "playwright test  --reporter=list",
    "test:e2e:chromium": "playwright test --project=chromium --reporter=list",
    "test:e2e:chromium:mobile": "playwright test --project='Mobile Chrome' --reporter=list",
    "test:e2e:chromium:headed": "playwright test --project=chromium --reporter=list --headed",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright test --reporter=html",
    "playwright:install": "playwright install",
    "audit:prod": "npm audit --production",
    "audit:summary": "npm audit || echo '⚠️  Known dev-only vulnerabilities (esbuild, lodash.template) - see SECURITY.md'",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:preview": "npm run build && wrangler pages deploy dist --branch=preview"
  },
  "dependencies": {
    "@biomejs/biome": "^2.1.2",
    "@kobalte/core": "^0.13.11",
    "@solidjs/router": "^0.15.3",
    "@supabase/supabase-js": "^2.58.0",
    "@tanstack/solid-table": "^8.21.3",
    "@tanstack/solid-virtual": "^3.13.12",
    "abcjs": "^6.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "jodit": "^4.6.13",
    "jodit-react": "^5.2.26",
    "loglevel": "^1.9.2",
    "lucide-solid": "^0.545.0",
    "solid-js": "^1.9.9",
    "solid-sonner": "^0.2.8",
    "sonner": "^2.0.7",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "ts-fsrs": "^5.2.3",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.6.0",
    "@types/sql.js": "^1.4.9",
    "@types/workbox-window": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.18.1",
    "jsdom": "^27.0.0",
    "postgres": "^3.4.7",
    "shadcn-solid": "^0.7.7",
    "supabase": "^2.51.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-solid": "^2.11.8",
    "vite-plugin-static-copy": "^3.1.3",
    "workbox-window": "^7.3.0",
    "wrangler": "^4.42.2"
  }
}